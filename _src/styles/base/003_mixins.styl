/*==========
	TEXT
 ==========*/
headline_large(){
	font-size makeRems(77.13);
	line-height makeEms(109.07, 77.13);
	font_bold()
}
headline_regular(){
	font-size makeRems(40);
	line-height makeEms(44,40);
	font_bold()
}
headline_small(){
	font-size makeRems(30);
	line-height makeEms(36,30);
	font_bold()
}
headline_small_normal(){
	font-size makeRems(30);
	line-height makeEms(36,30);
	font_regular()
}
headline_mobile_regular(){
	font-size makeRems(30);
	line-height makeEms(34,30);
}
headline_mobile_small(){
	font-size makeRems(20);
	line-height makeEms(24,20);
}
button_text(){
	font-size makeRems(24)
	line-height makeEms(28,40)
	PSLetterSpacing(40)
}
small_text(){
	font-size makeRems(18);
	line-height makeEms(26,18)
}

