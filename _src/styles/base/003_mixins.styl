/*
	A collection of reusable functions and mixins
 */
/*==========
	SIZE FUNCTIONS
 ==========*/
makeEms(goal, base = 20){
	(goal / base) * 1em;
}
makeRems(goal, base = 20){
	(goal / base) * 1rem;
}
/*==========
	LAYOUT
 ==========*/
mainColumn(){
	width 100%
	max-width 1280px
	margin 0 auto	
}
mediumColumn(){
	width (583 / 640) * 100%
	max-width 1180px
	margin 0 auto	
}
smallColumn(){
	width (583 / 640) * 100%
	max-width 790px
	margin 0 auto		
}
lastRow(){
	background $grey
	padding makeRems(65) 0
}
/*==========
	TRICKS
 ==========*/
hideText(){
	text-indent: 100%;
	white-space: nowrap;
	overflow: hidden;
}
PSLetterSpacing(val){
	letter-spacing: (val / 1000) * 1em	
}
ulReset(){
	padding 0
	list-style: none
}
